<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    tools:ignore="ContentDescription,PxUsage" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/icon" />
    <TextView
        android:text="@string/btc_china"
        android:id="@+id/btcchina_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/smart_watch_text_color_orange"
        android:textSize="@dimen/smart_watch_text_size_big" />
    <TextView
        android:text="@string/huobi"
        android:id="@+id/huobi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/smart_watch_text_color_orange"
        android:textSize="@dimen/smart_watch_text_size_big" />
    <TextView
        android:text="@string/mtgox"
        android:id="@+id/mtgox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/smart_watch_text_color_orange"
        android:textSize="@dimen/smart_watch_text_size_big" />
    <TextView
        android:text="@string/bitstamp"
        android:id="@+id/bitstamp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/smart_watch_text_color_orange"
        android:textSize="@dimen/smart_watch_text_size_big" />
</RelativeLayout>